@model ARMApocalypseSASAPI.ViewModels.AddSurvivorViewModel
@{
}

<div class="container">
    <div class="row">
        <h2 class="text-center">Add Survivor</h2>
        <div class="col-lg-12">
            <form class="form" asp-action="AddSurvivor" asp-controller="Home">
                <div class="form-group">
                    <label for="Age">Age</label>
                    <input type="number" placeholder="Enter survivor age" asp-for="Age" />
                </div>

                <div class="form-group">
                    <label for="Name">Name</label>
                    <input type="text" placeholder="Enter name" asp-for="Name" />
                </div>

                <div class="form-group">
                    <label for="Gender">Gender</label>
                    <select asp-for="Gender">
                        <option value="M">Male</option>
                        <option value="F">Female</option>
                    </select>
                </div>


            </form>
        </div>
    </div>
</div>
